<%
const title = opt.title || _.state.title || _.state.name
if (title) {
  %>
  <div class="page-title container-fluid px-0 mt-4 mb-2 mb-lg-2">
    <div class="page-title__head">
      <% if (_.state.logo && _.state.logo.url) { %>
        <img
          class="page-title__logo"
          src="<%= _.state.logo.url %>"
          alt="<%= _.state.logo.alt %>"
        >
      <% } %>
      <h1 class="my-0">
        <%= title %>
      </h1>
    </div>
    <%
    const description = opt.description || _.state.short_description
    if (description) {
      %>
      <div class="page-title__short-description lead">
        <%= description %>
      </div>
    <% } %>
  </div>
<% } %>
